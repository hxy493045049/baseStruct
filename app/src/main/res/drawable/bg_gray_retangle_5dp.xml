<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 填充颜色 -->
    <solid android:color="@color/white" />
    <!-- 描边 -->
    <stroke
        android:color="#cccccc"
        android:width="2px"/>
    <!-- 矩形的圆角半径 -->
    <corners
        android:radius="5dp" />
    <!-- 间隔 -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp"/><!-- 各方向的间隔 -->
</shape>