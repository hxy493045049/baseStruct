<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="@dimen/view_padding"
    android:background="@drawable/bg_gray_retangle_10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_padding"
    android:paddingRight="@dimen/view_padding"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/check_tourist_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"
            tools:text="小明"/>

        <TextView
            android:id="@+id/check_tourist_item_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_padding"
            android:layout_marginTop="@dimen/view_padding"
            android:layout_toRightOf="@+id/check_tourist_item_tv_name"
            android:textSize="11sp"
            tools:text="(女)"/>

        <LinearLayout
            android:id="@+id/check_tourist_item_ll_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_tourist_item_tv_name"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check_tourist_item_img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_dianhua"/>

            <TextView
                android:id="@+id/check_tourist_item_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_padding"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                tools:text="15544827659"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_xuhao"/>

            <TextView
                android:id="@+id/check_tourist_item_tv_sequence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="01"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/check_tourist_item_tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/check_tourist_item_ll_phone"
            android:background="@drawable/divider_bottom_gray_dark"/>

        <LinearLayout
            android:id="@+id/check_tourist_item_ll_birthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_tourist_item_tv_line"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期："
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/check_tourist_item_tv_birthDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_padding"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="1989-08-09"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_tourist_item_ll_birthDay"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check_tourist_item_tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="身份证："/>

            <TextView
                android:id="@+id/check_tourist_item_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_padding"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="110123198908094367"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>