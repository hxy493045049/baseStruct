<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_travel_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".business.travelAgency.team.modify.ChangeTravelMainActivity"
    >
    <RelativeLayout
        android:id="@+id/change_travel_rl_changeGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="4dp"
            android:layout_height="25dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/view_padding"
            android:layout_marginBottom="@dimen/view_padding"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导游信息"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_primary_dark"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_margin"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_travel_rl_lineInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <View
            android:layout_width="4dp"
            android:layout_height="25dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/view_padding"
            android:layout_marginBottom="@dimen/view_padding"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行程信息"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_primary_dark"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_margin"/>
    </RelativeLayout>
</LinearLayout>
