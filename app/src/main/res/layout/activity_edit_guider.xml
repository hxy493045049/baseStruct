    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_10dp_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:paddingTop="15dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/guider_delegate_period"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/sp_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/guider_period_begin"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/sp_14"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDelegateBeginDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/fillet4_solidwhite_strokegray"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="@color/text_primary_dark"
                android:textColorHighlight="@color/text_primary_dark"
                android:textSize="@dimen/sp_14"
                tools:hint="2017-03-28"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDelegateBeginHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/fillet4_solidwhite_strokegray"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="@color/text_primary_dark"
                android:textColorHighlight="@color/text_primary_dark"
                android:textSize="@dimen/sp_14"
                tools:hint="10:00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/guider_period_end"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/sp_14"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDelegateEndDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/fillet4_solidwhite_strokegray"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="@color/text_primary_dark"
                android:textColorHighlight="@color/text_primary_dark"
                android:textSize="@dimen/sp_14"
                tools:hint="2017-03-28"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDelegateEndHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/fillet4_solidwhite_strokegray"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="@color/text_primary_dark"
                android:textColorHighlight="@color/text_primary_dark"
                android:textSize="@dimen/sp_14"
                tools:hint="10:00"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/guider_submit"
        style="@style/CommonBottomBtnStyle"
        android:gravity="center"
        android:text="@string/confirm"/>
</LinearLayout>