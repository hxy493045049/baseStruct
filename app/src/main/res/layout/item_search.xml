<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingTop="@dimen/margin_top2">


    <FrameLayout
        android:id="@+id/fl_settlement_text1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/view_margin"
        android:background="@drawable/divider_bottom_gray_dark1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settlement_text1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height"
            android:layout_gravity="center"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:gravity="center"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:background="@drawable/divider_bottom_gray_dark1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:background="@drawable/divider_bottom_gray_dark1"
            android:gravity="center"
            android:hint="@string/settlement_edit_hit"
            android:maxLength="19"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"/>

        <FrameLayout
            android:id="@+id/fl_settlement_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_bottom_gray_dark1"
            android:visibility="gone">

            <TextView
                android:id="@+id/settlement_text2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:hint="请选择"/>
        </FrameLayout>


        <View
            android:id="@+id/split"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/fl_settlement_text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_bottom_gray_dark1"
            android:visibility="gone">

            <TextView
                android:id="@+id/settlement_text3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:hint="请选择"/>
        </FrameLayout>


    </LinearLayout>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/settement_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:src="@mipmap/icon_search_delete"/>

</LinearLayout>