<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_blue_grey_200"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/card_padding"
    tools:context=".business.travelAgency.team.ui.TeamTouristSourceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_margin"
        android:paddingRight="@dimen/view_margin">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_detail_source_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客源地1"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:paddingTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/view_padding"
            android:paddingTop="15dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="地区： "
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/team_detail_source_item_tv_placeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="湖南常德"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="成人： "
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/team_detail_source_item_tv_adultAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="40人"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/view_padding"
            android:paddingTop="@dimen/view_padding">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="儿童： "
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/team_detail_source_item_tv_childAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="4人"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="备注："
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/team_detail_source_item_tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="@dimen/view_padding"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/sp_12"
                tools:text="备注"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>