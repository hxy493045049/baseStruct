                <TextView
                    android:id="@+id/statistics_content_tv_tracel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/statistics_content_tv_ratio3"
                    android:layout_toRightOf="@+id/statistics_content_Color3"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="120dp"
                    android:textColor="@color/text_primary_light"
                    android:textSize="12sp"
                    tools:text="张家界第一旅行第三方高峰低谷"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/statistics_content_rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/statistics_content_tv_ratio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    tools:text="(20%)"
                    />

                <View
                    android:id="@+id/statistics_content_Color4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chart_solid_yellow_3dp"
                    />

                <TextView
                    android:id="@+id/statistics_content_tv_tracel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/statistics_content_tv_ratio4"
                    android:layout_toRightOf="@+id/statistics_content_Color4"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="120dp"
                    android:textColor="@color/text_primary_light"
                    android:textSize="12sp"
                    tools:text="张家界第一旅行第三方高峰低谷"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/statistics_content_rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/statistics_content_tv_ratio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    tools:text="(20%)"
                    />

                <View
                    android:id="@+id/statistics_content_Color5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chart_solid_blue_sky_3dp"
                    />

                <TextView
                    android:id="@+id/statistics_content_tv_tracel5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/statistics_content_tv_ratio5"
                    android:layout_toRightOf="@+id/statistics_content_Color5"
                    android:ellipsize="end"
