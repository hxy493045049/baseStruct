                    tools:text="张家界第一旅行第三方高峰低谷"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/statistics_content_rl6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/statistics_content_tv_ratio6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    tools:text="(20%)"
                    />

                <View
                    android:id="@+id/statistics_content_Color6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chart_solid_blue_deep_3dp"
                    />

                <TextView
                    android:id="@+id/statistics_content_tv_tracel6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/statistics_content_tv_ratio6"
                    android:layout_toRightOf="@+id/statistics_content_Color6"
                    android:ellipsize="end"
                    android:lines="1"
