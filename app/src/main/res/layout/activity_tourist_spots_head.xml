<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tourist_spots_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/view_margin"
    android:paddingTop="@dimen/view_margin"
    tools:context=".business.travelAgency.touristSpots.ui.TouristSpotsActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@mipmap/icon_solid_arrow_down"
        android:gravity="center"
        android:text="全部"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@mipmap/icon_solid_arrow_down"
        android:gravity="center"
        android:textColor="@color/text_primary_dark"
        android:text="湖南"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@mipmap/icon_solid_arrow_down"
        android:gravity="center"
        android:text="5A"
        android:layout_marginRight="12dp"/>
</LinearLayout>
